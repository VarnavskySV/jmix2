<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://carrierBrowse.caption"
        focusComponent="carriersTable">
    <data readOnly="true">
        <collection id="carriersDc"
                    class="com.company.space.entity.Carrier">
            <fetchPlan extends="_base">
                <property name="ports" fetchPlan="_base">
                    <property name="planet" fetchPlan="_base"/>
                    <property name="moon" fetchPlan="_base"/>
                    <property name="coordinates" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="carriersDl">
                <query>
                    <![CDATA[select e from sp_Carrier e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.id in (select c.id from sp_Carrier c inner join c.ports p where p.id in :ports)</c:where>
                            </c:jpql>
                        </and>
                    </condition>

                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="carriersTable" spacing="true">
        <filter id="filter"
                dataLoader="carriersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="carriersTable"
                    width="100%"
                    dataContainer="carriersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="carriersTable.create"/>
                <button id="editBtn" action="carriersTable.edit"/>
                <button id="removeBtn" action="carriersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
